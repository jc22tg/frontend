/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": "./",
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@environments/*": ["src/environments/*"],
      "@angular/*": ["node_modules/@angular/*"],
      "@core/*": ["src/app/core/*"],
      "@features/*": ["src/app/features/*"],
      "@shared/*": ["src/app/shared/*"],
      "@projects/*": ["src/app/projects/*"],
      "@elements/*": ["src/app/features/network-design/components/elements/*"],
      "@common-definitions/*": ["../common-definitions/*"],
      "@common-definitions/dtos/*": ["../common-definitions/dtos/*"],
      "@common-definitions/entities/*": ["../common-definitions/entities/*"],
      "@common-definitions/enums/*": ["../common-definitions/enums/*"],
      "@common-definitions/interfaces/*": ["../common-definitions/interfaces/*"],
      "@common-definitions/types/*": ["../common-definitions/types/*"],
      "@common-definitions/constants/*": ["../common-definitions/constants/*"],
      "@common-definitions/validators/*": ["../common-definitions/validators/*"],
      "@common-definitions/transformers/*": ["../common-definitions/transformers/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "files": [
    "src/environments/environment.ts",
    "src/environments/environment.prod.ts",
    "src/main.ts",
    "src/polyfills.ts",
    "src/main.server.ts",
    "src/server.ts"
  ]
}
